<?xml version="1.0" encoding="UTF-8"?>
<configuration>  
  
    <!-- ch.qos.logback.core.ConsoleAppender 控制台输出 -->  
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">  
        <encoder>  
            <pattern>[%-5level] %d{HH:mm:ss.SSS} [%thread] %logger{36}  %method %L- %msg%n</pattern>  
        </encoder>  
    </appender>  
  
    <!-- ch.qos.logback.core.rolling.RollingFileAppender 文件日志输出 -->  
    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>/do/logs/demo_walle/demo-client.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <FileNamePattern>demo-client-%i-%d{yyyy-MM-dd}.log</FileNamePattern>
            <MaxHistory>10</MaxHistory>
            <maxFileSize>5MB</maxFileSize>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
        <!--<layout class="ch.qos.logback.classic.PatternLayout">  -->
            <!--<pattern>[%-5level] %d{HH:mm:ss.SSS} [%thread] %logger{36} %method %L- %msg%n  -->
            <!--</pattern>  -->
        <!--</layout>  -->
    </appender>  
    
    <!-- 日志级别 -->  
    <!--<root >-->
        <!--<level value="error" />  -->
        <!--<level value="info" />  -->
        <!--<appender-ref ref="console" />  -->
        <!--<appender-ref ref="file" />  -->
    <!--</root>  -->
    <root level="info">
        <appender-ref ref="console" />
        <appender-ref ref="file" />
    </root>

</configuration>   